    public static void numberLine() {
        //This code needs to find 2 adjacent numbers that gives you the highest product 
        //both left to right and right to left
        //The result should be 56
            int grid [][] = {
                {9, 2, 3, 2, 3, 5, 6, 3, 7, 8}

            };    
            
            int product = 0;
            int highest = 0;
            
            for(int x = 0; x<7; x++){
            for(int y = 0; y<1; y++){
                product = grid[y][x] * grid[y][x + 1];
                highest = product;
            }
            }
            //start code here
            System.out.println(highest);
    }
    
